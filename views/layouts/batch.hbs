{{> header}}
<body>
<div class="page-header">
    <h1>Batch</h1>
</div>
<div class="modal" id="batchModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <p>Batch Created Successfuly.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-sm-4">
        <form id="batchForm">
            <div class="form-group">
                <label for="batch">Batch Name:</label>
                <input type="text" id="batchName" class="form-control" name="batchName" placeholder="Enter Batch Name">
            </div>
            <div class="form-group">
                <label for="pwd">Session:</label>
                <select id="session" class="form-control">
                    <option value="summer">Summer</option>
                    <option value="spring">Spring</option>
                    <option value="fall">Fall</option>
                </select>
            </div>
            <button type="button" value="submit" id="submit-batch" class="btn btn-info">Submit</button>
        </form>
    </div>

    <div class="col-sm-8">
        <table id="batch-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>Name</th>
                <th>Session</th>

            </tr>
            </thead>
            <tbody></tbody>

        </table>
    </div>
</div>
<script src="/batch/batch.js"/>
{{> footer}}
