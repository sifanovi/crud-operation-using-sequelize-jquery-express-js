{{> header}}
<body>
<div class="page-header">
    <h1>Batch</h1>
</div>

<div class="container">
    <div class="col-sm-4">
        <form id="batchForm">
            <div class="form-group">
                <label for="batch">Batch Name:</label>
                <input type="text" id="batchName" class="form-control" name="batchName" placeholder="Enter Batch Name">
            </div>
            <div class="form-group">
                <label for="pwd">Session:</label>
                <select id="session" class="form-control">
                    <option value="summer">Summer</option>
                    <option value="spring">Spring</option>
                    <option value="fall">Fall</option>
                </select>
            </div>
            <button type="button" value="submit" id="submit-batch" class="btn btn-info">Submit</button>
             <button type="button" value="Update" id="update-batch" class="hide btn btn-info">Update</button>
        </form>
    </div>

    <div class="col-sm-8">
        <table id="batch-table" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>Name</th>
                <th>Session</th>

            </tr>
            </thead>
            <tbody></tbody>

        </table>
        <button class="btn btn-danger pull-right margin-left-5px" id="delete">Delete</button>
          <button class="btn btn-primary pull-right margin-left-5px" id="edit">Edit</button>
           <button class="btn btn-primary pull-right margin-left-5px" id="add">Add</button>

    </div>

</div>
<script src="/batch/batch.js"> </script>
{{> footer}}
